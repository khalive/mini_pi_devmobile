<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <!-- Logo en haut avec taille augmentée -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_logo" />

    <!-- Carte du formulaire avec hauteur ajustée -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLogo"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp">

            <!-- Titre modifié -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connectez-vous"
                android:textColor="@color/primaryDark"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="28dp"/>

            <!-- Champ Email avec icône intégrée -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/person"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom d'utilisateur"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/primaryText"/>
            </LinearLayout>

            <!-- Champ Mot de passe avec icône intégrée -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_bg"
                android:padding="12dp"
                android:layout_marginBottom="28dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/lock"
                    android:layout_marginEnd="12dp"/>

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mot de passe"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColor="@color/primaryText"/>
            </LinearLayout>

            <!-- Bouton Connexion avec style amélioré -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="CONNEXION"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_login_bg"
                android:stateListAnimator="@null"
                android:elevation="4dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Version en bas avec marge augmentée -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textColor="@color/secondaryText"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>
</RelativeLayout>